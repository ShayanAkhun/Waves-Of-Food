<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:id="@+id/main"
		android:layout_width="match_parent"
		android:background="@color/white"
		android:layout_height="match_parent"
		android:orientation="vertical"
		tools:context=".PaymentActivity">
	<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">



	<ImageButton
			android:layout_width="32dp"
			android:layout_height="32dp"
			app:srcCompat="@drawable/backicon" android:scaleType="centerCrop" android:id="@+id/imageButton"
			app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
			android:layout_marginStart="16dp" android:layout_marginTop="32dp"
			android:background="@android:color/transparent"/>
		<TextView
				android:text="Edit"
				android:layout_width="wrap_content"
				android:layout_height="40dp" android:id="@+id/textView27"
				app:layout_constraintTop_toBottomOf="@+id/imageButton" app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
				android:textColor="@color/textColor" android:textSize="20sp" android:fontFamily="@font/yeonsung_regular"
				android:layout_gravity="center"/>
	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="56dp" app:layout_constraintTop_toBottomOf="@+id/textView27"
			app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
			android:background="@drawable/edittextshape" android:layout_marginTop="16dp"
			android:gravity="center_vertical">
		<TextView
				android:text="Name"
				android:layout_width="30dp"
				android:layout_height="40dp" android:layout_weight="1"
				android:paddingLeft="8dp" android:fontFamily="@font/yeonsung_regular" android:textColor="@color/black"
				android:textSize="20sp"/>
		<EditText
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:inputType="text"
				android:text="Name"
				android:ems="10"
				android:layout_weight="1"
				android:background="@android:color/transparent" android:fontFamily="@font/lato"
				android:textColor="@color/ProfileTextColor"/>
	</LinearLayout>
	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" android:layout_marginTop="16dp"
			android:background="@drawable/edittextshape" android:gravity="center_vertical" android:elevation="2dp"
			android:layout_marginStart="16dp" android:layout_marginEnd="16dp">
		<TextView
				android:text="Address"
				android:layout_width="wrap_content"
				android:layout_height="40dp" android:layout_weight="1"
				android:layout_marginLeft="8dp" android:fontFamily="@font/yeonsung_regular"
				android:textSize="20sp"/>
		<EditText
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="5dp"
				android:inputType="textMultiLine"
				android:text="Lorem ipsum is placeholder text  commonly used in the graphic,  print, and publishing industries  for previewing layouts and visual "
				android:ems="10"
				android:layout_weight="1"
				android:background="@android:color/transparent" android:textColor="@color/ProfileTextColor"
				android:fontFamily="@font/lato_regular"/>
	</LinearLayout>
	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="56dp" app:layout_constraintTop_toBottomOf="@+id/textView27"
			app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
			android:background="@drawable/edittextshape" android:layout_marginTop="16dp"
			android:gravity="center_vertical">
		<TextView
				android:text="Phone"
				android:layout_width="30dp"
				android:layout_height="40dp" android:layout_weight="1"
				android:paddingLeft="8dp" android:fontFamily="@font/yeonsung_regular" android:textColor="@color/black"
				android:textSize="20sp"/>
		<EditText
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:inputType="text"
				android:text="+123456789"
				android:ems="10"
				android:layout_weight="1"
				android:background="@android:color/transparent" android:fontFamily="@font/lato"
				android:textColor="@color/ProfileTextColor" android:textAlignment="textStart"/>
	</LinearLayout>
	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="56dp" app:layout_constraintTop_toBottomOf="@+id/textView27"
			app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
			android:background="@drawable/edittextshape" android:layout_marginTop="16dp"
			android:gravity="center_vertical">
		<TextView
				android:text="Payment Method"
				android:layout_width="40dp"
				android:layout_height="wrap_content" android:layout_weight="1"
				android:paddingLeft="8dp" android:fontFamily="@font/yeonsung_regular"
				android:textColor="@color/ProfileTextColor" android:textSize="14sp"/>
		<ImageView
				android:layout_width="250dp"
				android:layout_height="wrap_content" app:srcCompat="@drawable/cashondelivery"
				android:id="@+id/imageView7" android:layout_weight="1" android:layout_marginTop="8dp"
				android:layout_marginBottom="8dp"/>
	</LinearLayout>
	<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="56dp"
			app:layout_constraintTop_toBottomOf="@+id/textView27"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginStart="16dp"
			android:layout_marginEnd="16dp"
			android:background="@drawable/edittextshape"
			android:layout_marginTop="16dp"
			android:gravity="center_vertical"
			android:layout_marginBottom="8dp">
		<TextView
				android:text="Total Amount"
				android:layout_width="40dp"
				android:layout_height="wrap_content" android:layout_weight="1"
				android:paddingLeft="8dp" android:fontFamily="@font/yeonsung_regular"
				android:textColor="@color/ProfileTextColor" android:textSize="14sp"/>
		<EditText
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:inputType="none"
				android:text="$10"
				android:ems="10"
				android:layout_weight="1"
				android:background="@android:color/transparent" android:fontFamily="@font/yeonsung_regular"
				android:textColor="@color/textColor" android:textSize="20sp" android:gravity="right"
				android:paddingRight="52dp"/>
	</LinearLayout>
	</LinearLayout>
	<androidx.appcompat.widget.AppCompatButton
			android:layout_width="match_parent"
			android:layout_height="56dp"
			android:layout_gravity="bottom"
			android:text="Place my Order"
			android:textAllCaps="false"
			android:textColor="@color/textColor"
			android:fontFamily="@font/yeonsung_regular"
			android:textSize="22sp"
			android:layout_marginLeft="16dp"
			android:layout_marginRight="16dp"
			android:layout_marginBottom="32dp"
			android:background="@drawable/edittextshape" android:id="@+id/placemyorderbutton"/>
</FrameLayout>