<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/white"
             tools:context=".fragments.CongratsFragment">

	<!-- TODO: Update blank fragment layout -->
	<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Congrats\n Your Order Placed" android:layout_gravity="center_horizontal"
				android:fontFamily="@font/yeonsung_regular" android:textSize="25sp" android:textColor="@color/black"
				android:layout_marginTop="32dp" android:textAlignment="center"/>
		<ImageView
				android:src="@drawable/congrats"
				android:layout_width="200dp"
				android:layout_height="200dp" android:id="@+id/imageView5" android:layout_gravity="center"
				android:layout_marginTop="32dp"/>
		<androidx.appcompat.widget.AppCompatButton
				android:background="@drawable/addtocartbutton"
				android:textAllCaps="false"
				android:text="Go Home"
				android:layout_width="157dp"
				android:layout_height="57dp" android:id="@+id/gohomebutton" android:layout_marginTop="32dp"
				android:fontFamily="@font/yeonsung_regular" android:textColor="@color/white"
				android:layout_gravity="center" android:textSize="20sp" android:layout_marginBottom="18dp"/>
	</LinearLayout>

</FrameLayout>