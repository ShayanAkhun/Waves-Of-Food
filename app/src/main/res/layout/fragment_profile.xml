<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".fragments.ProfileFragment" android:orientation="vertical" android:paddingLeft="16dp"
              android:paddingRight="16dp" android:background="@color/white">
	<LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="56dp" android:layout_marginTop="32dp"
			android:background="@drawable/edittextshape" android:gravity="center_vertical" android:elevation="2dp"
			android:layout_marginLeft="10dp" android:layout_marginRight="10dp">
		<TextView
				android:text="Name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_weight="1"
				android:layout_marginLeft="8dp" android:fontFamily="@font/yeonsung_regular" android:textSize="22sp"/>
		<EditText
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:inputType="text"
				android:text="Name"
				android:ems="10"
				android:layout_weight="1"
				android:background="@android:color/transparent" android:textColor="#3B3B3B"
				android:fontFamily="@font/lato_regular"/>
	</LinearLayout>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="56dp" android:layout_marginTop="32dp"
			android:background="@drawable/edittextshape" android:gravity="center_vertical" android:elevation="2dp"
			android:layout_marginLeft="10dp" android:layout_marginRight="10dp">
		<TextView
				android:text="Address"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_weight="1"
				android:layout_marginLeft="8dp" android:fontFamily="@font/yeonsung_regular" android:textSize="22sp"/>
		<EditText
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:inputType="text"
				android:text="Address"
				android:ems="10"
				android:layout_weight="1"
				android:background="@android:color/transparent" android:textColor="#3B3B3B"
				android:fontFamily="@font/lato_regular"/>
	</LinearLayout>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="56dp" android:layout_marginTop="32dp"
			android:background="@drawable/edittextshape" android:gravity="center_vertical" android:elevation="2dp"
			android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp">
		<TextView
				android:text="Phone"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_weight="1"
				android:layout_marginLeft="8dp" android:fontFamily="@font/yeonsung_regular" android:textSize="22sp"/>
			<EditText
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:inputType="text"
					android:text="+123456789"
					android:ems="10"
					android:layout_weight="1"
					android:background="@android:color/transparent" android:textColor="#3B3B3B"
					android:fontFamily="@font/lato_regular"/>
	</LinearLayout>
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="56dp" android:layout_marginTop="32dp"
			android:background="@drawable/edittextshape" android:gravity="center_vertical" android:elevation="2dp"
			android:layout_marginLeft="10dp" android:layout_marginRight="10dp">
			<TextView
					android:text="Email"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:layout_weight="1"
					android:layout_marginLeft="8dp" android:fontFamily="@font/yeonsung_regular"
					android:textSize="22sp"/>
			<EditText
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:inputType="text"
					android:text="test@gmail.com"
					android:ems="10"
					android:layout_weight="1"
					android:background="@android:color/transparent" android:textColor="#3B3B3B"
					android:fontFamily="@font/lato_regular"/>
	</LinearLayout>
	</LinearLayout>

	<androidx.appcompat.widget.AppCompatButton
			android:background="@drawable/edittextshape"
			android:text="@string/save_information"
			android:elevation="5dp"
			android:fontFamily="@font/yeonsung_regular"
			android:textColor="@color/textColor"
			android:textSize="18sp"
			android:layout_marginLeft="8dp"
			android:layout_marginRight="8dp"
			android:layout_width="match_parent"
			android:textAllCaps="false"
			android:layout_marginBottom="32dp"
			android:layout_height="56dp"
			android:id="@+id/button7" android:layout_gravity="bottom"/>

</FrameLayout>